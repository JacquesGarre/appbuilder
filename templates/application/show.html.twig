{% extends 'base.html.twig' %}

{% block title %}Application{% endblock %}

{% block body %}
    <h1>Application</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ application.name }}</td>
            </tr>
            <tr>
                <th>DatabaseUser</th>
                <td>{{ application.databaseUser }}</td>
            </tr>
            <tr>
                <th>DatabaseName</th>
                <td>{{ application.databaseName }}</td>
            </tr>
            <tr>
                <th>DatabasePassword</th>
                <td>{{ application.databasePassword }}</td>
            </tr>
            <tr>
                <th>DatabaseHost</th>
                <td>{{ application.databaseHost }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ application.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_application_index') }}">back to list</a>

    <a href="{{ path('app_application_edit', {'id': application.id}) }}">edit</a>

    {{ include('application/_delete_form.html.twig') }}
{% endblock %}
